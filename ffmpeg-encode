#!/bin/bash

MODE="$1"
shift

case "$MODE" in
	--help|-h)
		echo "Usage: $0 <mode> [files...]"
		echo
		echo "Available modes: av1_40"
		exit 0
		;;
	av1_40)
		export COMMAND="-c:v libsvtav1 -preset 10 -crf 40 -c:a libvorbis"
		;;
	*)
		echo "Incorrect mode" 1>&2
		exit 1
		;;
esac

HWACCEL="-hwaccel opencl"

trap "export INT=''; kill -INT %1" SIGINT
:
for i in "$@"; do
	INPUT="$i"
	OUTPUT="$(echo -n "$INPUT" | sed -z 's/\.[^\/]\+$\|$/.mkv/')"
	TEMP_OUTPUT="$(echo -n "$INPUT" | sed 's/[^\/]*$//').$(echo -n \"$INPUT\" | md5sum | head -c32).mkv"

	ffmpeg $HWACCEL -i "$INPUT" $COMMAND "$TEMP_OUTPUT"
	if [ "$?" == "0" ]; then
		mv "$INPUT" "${INPUT}.old"
		mv "$TEMP_OUTPUT" "$OUTPUT"
	else
		rm "$TEMP_OUTPUT" 2>/dev/null
		read -p "ERROR, press any key to exit..."
		exit 1
	fi
done

